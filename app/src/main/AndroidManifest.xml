        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true" />
        <!--服务 生命周期-->
        <service
            android:name=".test.binder.BinderService"
            android:enabled="true"
            android:exported="true" />
        <!--服务 调试-->
        <activity
            android:name=".activity.ServiceActivity"
            android:exported="false" />
        <!--test 主页-->
        <activity
            android:name=".activity.MainTestActivity"
            android:exported="false" />
        <!--生命周期 调试-->
        <activity
            android:name=".activity.TestLifeBActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="cc.test.left.B"/>
                <data android:scheme="cc"
                    android:host="can3191"
                    android:port="8888"
                    android:path="/niu"/>
            </intent-filter>
        </activity>
        <!--生命周期 调试-->
        <activity
            android:name=".activity.TestLifeAActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false">
            <intent-filter>
                <action android:name="test.demo.action.life.a" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="test.demo.category.life.a" />
            </intent-filter>
        </activity>
