<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cc.skillapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LocationActivity" />
        <activity android:name=".activity.CustomControlActivity" />
        <activity android:name=".activity.ViewPagerActivity" />
        <activity android:name=".activity.ImageAvatarActivity" />
        <activity android:name=".activity.SwipeRefreshLayoutActivity" />
        <activity android:name=".activity.RecyclerViewActivity" />
        <activity android:name=".MainSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.OkHttpActivity" />
        <activity android:name=".activity.CalendarActivity" />
        <activity android:name=".activity.LoadLocalWebActivity" />
        <activity android:name=".activity.LoadWebActivity" />
        <activity android:name=".activity.LoadAssetsWebActivity" />
        <activity android:name=".activity.RvSuspensionActivity" />
        <activity android:name=".activity.OrganizationalStructureActivity" />
        <activity android:name=".activity.VideoPlayerActivity"/>
        <activity android:name=".activity.MediaPlayerActivity"/>
        <activity android:name=".activity.AllApplicationActivity"/>
        <activity
            android:name=".activity.ReportActivity"
            android:process=":webview" />
    </application>

</manifest>