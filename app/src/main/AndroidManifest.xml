        <activity android:name=".activity.TestActivity" />

        <!--广播demo-->
        <receiver
            android:name=".receive.MyBroadReceive"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="this is my broadcast" />
            </intent-filter>
        </receiver>

        <!--ContentProvider demo-->
        <provider
            android:name=".contentprovider.MyContentProvider"
            android:authorities="com.cc.myprovider"
            android:exported="true"
            android:multiprocess="true" />

        <!--aidl -->
        <service
            android:name=".test.aidl.AidlService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.cc.skillapp.test.aidl.IMyAidlInterface" />
            </intent-filter>
        </service>
        <!--手写 AMS-->
        <service
            android:name=".service.ActivityManagerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.cc.skillapp.service.ActivityManagerService"/>
            </intent-filter>
        </service>
