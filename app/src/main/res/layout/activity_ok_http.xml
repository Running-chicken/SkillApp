<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cc.skillapp.activity.OkHttpActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_test_get"
            style="@style/TextStyle"
            android:text="测试Get请求" />

        <TextView
            android:id="@+id/tv_test_get_async"
            style="@style/TextStyle"
            android:text="测试Get请求异步"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_test_get" />

        <TextView
            android:id="@+id/tv_test_post_async"
            style="@style/TextStyle"
            android:text="测试Post请求异步"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_test_get_async" />

        <TextView
            android:id="@+id/tv_test_post_json"
            style="@style/TextStyle"
            android:text="测试Post请求异步json"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_test_post_async" />

        <TextView
            android:id="@+id/tv_download"
            style="@style/TextStyle"
            android:text="下载图片"/>

        <TextView
            android:id="@+id/tv_okhttp_result"
            style="@style/TextStyle"/>

    </LinearLayout>
</layout>
