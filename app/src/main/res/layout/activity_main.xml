<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.skillapp.MainActivity">

    <TextView
        android:id="@+id/tv_first_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Funciton"
        />
    <TextView
        android:id="@+id/tv_second_funciton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Second Function"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_function"
        app:layout_constraintLeft_toLeftOf="@+id/tv_first_function" />
    <TextView
        android:id="@+id/tv_third_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Third Function"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_funciton"
        app:layout_constraintLeft_toLeftOf="@+id/tv_second_funciton"/>

</android.support.constraint.ConstraintLayout>
