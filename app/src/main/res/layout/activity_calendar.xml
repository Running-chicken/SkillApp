<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_tprl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="土拍日历"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black_0e131a"/>
            <View
                android:id="@+id/view_tprl"
                android:layout_width="21dp"
                android:layout_height="4dp"
                android:background="@drawable/shape_rect_blue_3295f6"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="22dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_zbrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播日历"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/gray_a4a7a9"/>
            <View
                android:id="@+id/view_zbrl"
                android:layout_width="21dp"
                android:layout_height="4dp"
                android:background="@drawable/shape_rect_blue_3295f6"
                android:layout_marginTop="7dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textSize="12sp"
            android:textColor="@color/gray_a4a7a9"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#FAFAFA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_previous"
            android:layout_toLeftOf="@+id/tv_date"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2019/7"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black_363e48"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_next" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="6"
            android:textColor="#F0F8FF"
            android:textStyle="bold"
            android:textSize="166sp"/>
        <GridView
            android:id="@+id/gv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:background="@null"
            android:listSelector="#00000000"
            android:scrollbars="none"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_circle_6c82f7"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/tv_calendar_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大咖讲坛"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black_363e48"
            android:drawableLeft="@drawable/shape_circle_6c82f7"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_circle_ffab09"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/tv_calendar_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待拍地块"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black_363e48"
            android:drawableLeft="@drawable/shape_circle_6c82f7"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_circle_fd7125"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/tv_calendar_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土地推介"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black_363e48"
            android:drawableLeft="@drawable/shape_circle_6c82f7"/>
        <View
            android:id="@+id/view_calendar_fourth"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_circle_9098a3"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="3dp" />

        <TextView
            android:id="@+id/tv_calendar_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流拍"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black_363e48"
            android:drawableLeft="@drawable/shape_circle_6c82f7" />

    </LinearLayout>


</LinearLayout>