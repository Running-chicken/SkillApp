<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="15"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="5dp">
            <View
                android:id="@+id/view_first"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_circle_6c82f7"
                android:layout_marginRight="1dp"
                android:visibility="gone"/>
            <View
                android:id="@+id/view_second"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_circle_ffab09"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:visibility="gone"/>
            <View
                android:id="@+id/view_third"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_circle_fd7125"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:visibility="gone"/>
            <View
                android:id="@+id/view_fourth"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_circle_9098a3"
                android:layout_marginLeft="1dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>