<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组织架构"
            android:textSize="18sp"
            android:textColor="@color/black_0e131a"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <HorizontalScrollView
        android:id="@+id/hsv_orginazational"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scrollbars="none"
        android:layout_marginRight="20dp">

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_org_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:textSize="17sp"
                android:textColor="#297EFF"
                android:text="下属部门"/>
            <View
                android:id="@+id/v_line_dept"
                android:layout_width="54dp"
                android:layout_height="2dp"
                android:background="#297EFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_org_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:textSize="17sp"
                android:textColor="#83868F"
                android:text="下属员工"/>
            <View
                android:id="@+id/v_line_staff"
                android:layout_width="54dp"
                android:layout_height="2dp"
                android:background="#297EFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EEEEEE"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_organizational"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/tv_add_dept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/shape_gray_f5f5f5_radius2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="添加子部门"/>

        <TextView
            android:id="@+id/tv_dept_set"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="@drawable/shape_gray_f5f5f5_radius2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="部门设置"/>
    </LinearLayout>

</LinearLayout>