<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.TestLifeAActivity">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/gray_a4a7a9"
            android:text="this is test life" />

        <TextView
            android:id="@+id/tv_start_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_start"
            android:background="@color/gray_a4a7a9"
            android:text="this is test life 1" />



        <TextView
            style="@style/TextStyle"
            android:text="test data"
            android:id="@+id/tv_start_data"/>

        <TextView
            android:id="@+id/tv_life_lifecycle"
            style="@style/TextStyle"
            android:text="继承RxAcTivity"/>

        <TextView
            android:id="@+id/tv_life_lifecycle2"
            style="@style/TextStyle"
            android:text="使用lifecycleProvider"/>
    </LinearLayout>
</layout>